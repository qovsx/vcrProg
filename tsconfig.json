{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "experimentalDecorators": false,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "assets/*": ["../assets/*"],
        }
    },
    "include": ["src/**/*"]
}
